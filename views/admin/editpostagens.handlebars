{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Editar postagem</h4>
    <form action="/admin/postagens/edit" method="post">
      <input type="hidden" name="id" value="{{postagens._id}}">
      <label for="nome">Titulo:</label>
      <input type="text" name="titulo" class="form-control" value="{{postagens.titulo}}">
      <label for="slug">Slug:</label>
      <input type="text" name="slug"class='form-control' value="{{postagens.slug}}">
      <label for="descricao">Descrição:</label>
      <input type="text" name="descricao" class="form-control" value="{{postagens.descricao}}">
      <label for="conteudo">Conteúdo:</label>
      <textarea name="conteudo" cols="30" rows="10" class="form-control">{{postagens.conteudo}}</textarea>
      <label for="categoria">Categoria:</label>
      <select name="categoria" class="form-select">
        {{#each categorias}}
        <option value="{{_id}}">{{nome}}</option>
        {{else}}
        <option value="0">Sem categoria cadastrada</option>
        {{/each}}
      </select>
      <button type="submit" class="btn btn-success mt-4">Editar</button>
    </form>
  </div>
</div>